{
  "extends": ["@ofadiman/eslint-config-node"],
  "rules": {
    "default-case": "off",
    "consistent-return": "off"
  },
  "overrides": [
    {
      "files": ["*.spec.ts"],
      "rules": {
        "@typescript-eslint/no-unsafe-assignment": "off"
      }
    },
    {
      "files": ["src/database/migrations/*"],
      "rules": {
        "@typescript-eslint/explicit-member-accessibility": "off",
        "prettier/prettier": [
          "error",
          {
            "tabWidth": 4
          }
        ]
      }
    }
  ]
}
